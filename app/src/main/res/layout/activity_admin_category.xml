<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/app_slogon_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Add new Product"
        android:textStyle="bold|italic"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textAlignment="center"
        ></TextView>

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/app_slogon_category"
    >

        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width='wrap_content'
            android:layout_height="80dp"
            android:src="@drawable/tshirts"
            ></ImageView>

        <ImageView
            android:id="@+id/sport_t_shirts"
            android:layout_width='wrap_content'
            android:layout_height="wrap_content"
            android:src="@drawable/sports"
            ></ImageView>

        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width='wrap_content'
            android:layout_height="wrap_content"
            android:src="@drawable/female_dresses"
            ></ImageView>
        <ImageView
            android:id="@+id/sweather"
            android:layout_width='wrap_content'
            android:layout_height="wrap_content"
            android:src="@drawable/sweather"
            ></ImageView>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/linear1_category_layout"
        >

        <ImageView
            android:id="@+id/glasses"
            android:layout_width='wrap_content'
            android:layout_height="80dp"
            android:src="@drawable/glasses"
            ></ImageView>

        <ImageView
            android:id="@+id/purses_bags"
            android:layout_width='wrap_content'
            android:layout_height="wrap_content"
            android:src="@drawable/purses_bags"
            ></ImageView>

        <ImageView
            android:id="@+id/hats"
            android:layout_width='92dp'
            android:layout_height="30dp"
            android:src="@drawable/hats"
            ></ImageView>
        <ImageView
            android:id="@+id/shoess"
            android:layout_width='70dp'
            android:layout_height="80dp"
            android:src="@drawable/shoess"
            android:layout_marginStart="16dp"
            ></ImageView>


    </LinearLayout>





    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/linear2_category_layout"
        >

        <ImageView
            android:id="@+id/headphoness"
            android:layout_width='wrap_content'
            android:layout_height="80dp"
            android:src="@drawable/headphoness"
            ></ImageView>

        <ImageView
            android:id="@+id/laptops"
            android:layout_width='90dp'
            android:layout_height="90dp"
            android:src="@drawable/laptops"
            ></ImageView>

        <ImageView
            android:id="@+id/mobiles"
            android:layout_width='92dp'
            android:layout_height="30dp"
            android:src="@drawable/mobiles"
            ></ImageView>
        <ImageView
            android:id="@+id/watches"
            android:layout_width='70dp'
            android:layout_height="80dp"
            android:src="@drawable/watches"
            android:layout_marginStart="16dp"
            ></ImageView>


    </LinearLayout>






</RelativeLayout>